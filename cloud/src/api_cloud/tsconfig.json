{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./app/*"
      ]
    },
  },
  "exclude": [
    "node_modules",
    "src/private/**/*"
  ]
}